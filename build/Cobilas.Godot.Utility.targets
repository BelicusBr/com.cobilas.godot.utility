<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Target Name="EnsureDotnetScript" BeforeTargets="Build">
		<!-- Verifica se dotnet-script está instalado -->
		<Exec Command="dotnet-script --version"
			  IgnoreExitCode="true"
			  ContinueOnError="true">
			<Output TaskParameter="ExitCode" PropertyName="DotnetScriptExitCode" />
		</Exec>

		<!-- Instala se não estiver presente -->
		<Exec Command="dotnet tool install -g dotnet-script"
			  Condition="'$(DotnetScriptExitCode)' != '0'" />
	</Target>
</Project>
